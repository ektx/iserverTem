<%
	let args = arguments[0]; 
	// 标题
	let title = args.title || '';
	// 自定义样式数组
	let cssArr = args.css || [];
	// 是否调用 rem 适应 H5 页面
	let mobile = args.mobile || false;

%>

<head>
	<meta charset="UTF-8">
	<title><%= title %></title>
	<% for (let i = 0, l = cssArr.length; i < l; i++) { %>
	<link rel="stylesheet" href="<%= cssArr[i] %>">
	<% } %>

	<% if (mobile) { %>
	<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
	<script>
		/*
			设置 HTML 根文字大小
			@ektx <530675800@qq.com>
			@v0.0.1
			------------------------------------
			用于解决移动端大小屏的问题
		*/

		(function () {
			var resizeRem = function() {
		        var html = document.documentElement;
		        var windowWidth = html.clientWidth;
		        html.style.fontSize = windowWidth / 720*100 + 'px';
			}
		    document.addEventListener('DOMContentLoaded', resizeRem, false);

		    window.onresize = resizeRem;
		})();
	</script>
	<% } %>
</head>